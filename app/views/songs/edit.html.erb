<h1>Editing <%= @song.title %></h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>

  <%= f.label :genre_name %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br>

  <%= f.label :notes %>
  <%= f.fields_for :notes do |note| %>
    <%= note.text_field :content %>
  <% end %>
  <br>

  <%= f.submit %>
<% end %>


