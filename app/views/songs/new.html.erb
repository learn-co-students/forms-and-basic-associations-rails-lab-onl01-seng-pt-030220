<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>

  <%= f.label :genre_name %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
    <input name="song[note_contents][]" id="song_notes_1">
    <input name="song[note_contents][]" id="song_notes_2">
    <input type="submit" value="Submit Notes">
  <br>

  <%= f.label :notes %>
  <%= f.fields_for :notes do |note| %>
    <%= note.text_field :content %>
  <% end %>
  <br>

  <%= f.submit %>
<% end %>


